# Streamlit Cloud Secrets Configuration
# Copy this file to secrets.toml and fill in your actual values
# In Streamlit Cloud, add these in the app settings under "Secrets"

# Required: OpenAI API Key
OPENAI_API_KEY = "sk-your-openai-api-key-here"

# Optional: Google Search API (uses stub results if not provided)
GOOGLE_API_KEY = "your-google-api-key-here"
GOOGLE_CSE_ID = "your-custom-search-engine-id-here"

# Optional: Configuration
DEBUG_MODE = "false"
MAX_TOKENS_PER_SESSION = "50000"

